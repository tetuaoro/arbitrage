{
	"name": "arbitrage",
	"version": "1.1.1",
	"description": "Make an arbitrage trading bot : sniping & monitoring uniswap fork on polygon network",
	"main": "build/server.js",
	"author": "tetuaoro <tetuaoropro@gmail.com>",
	"license": "MIT",
	"private": false,
	"scripts": {
		"migrate": "truffle migrate --network development",
		"migrate:prod": "truffle migrate --network polygon",
		"build:server": "tsc --build --clean && tsc && gulp && node minify.js",
		"test:server": "tsc && NODE_ENV=dev node .",
		"compile": "tsc -p tsconfig.client.json",
		"monitor": "node dist/client.js",
		"test": "yarn compile && NODE_ENV=dev yarn monitor"
	},
	"dependencies": {
		"dotenv": "^10.0.0",
		"ethers": "^5.5.1"
	},
	"devDependencies": {
		"@node-minify/core": "^6.2.0",
		"@node-minify/jsonminify": "^6.2.0",
		"@truffle/hdwallet-provider": "^2.0.0",
		"@types/node": "^16.11.12",
		"@uniswap/v2-periphery": "^1.1.0-beta.0",
		"gulp": "^4.0.2",
		"gulp-terser": "^2.1.0",
		"openzeppelin-solidity": "^4.4.0"
	}
}
