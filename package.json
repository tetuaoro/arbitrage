{
	"name": "arbitrage",
	"version": "1.1.1",
	"description": "Make an arbitrage trading bot : sniping & monitoring uniswap fork on polygon network",
	"main": "build/server.js",
	"author": "tetuaoro <tetuaoropro@gmail.com>",
	"license": "MIT",
	"private": false,
	"scripts": {
		"migrate": "truffle migrate --network development",
		"compile": "tsc --build --clean && tsc",
		"build": "yarn compile && gulp && node minify.js",
		"start": "NODE_ENV=dev node .",
		"test": "yarn compile && yarn start",
		"migrate:prod": "truffle migrate --network polygon",
		"start:prod": "node .",
		"test:monitor": "tsc -p tsconfig.client.json && NODE_ENV=dev yarn monitor",
		"monitor": "node dist/client.js"
	},
	"dependencies": {
		"dayjs": "^1.10.7",
		"dotenv": "^10.0.0",
		"ethers": "^5.5.1",
		"socket.io": "^4.4.0",
		"socket.io-client": "^4.4.0"
	},
	"devDependencies": {
		"@node-minify/core": "^6.2.0",
		"@node-minify/jsonminify": "^6.2.0",
		"@truffle/hdwallet-provider": "^2.0.0",
		"@types/node": "^16.11.12",
		"@uniswap/v2-periphery": "^1.1.0-beta.0",
		"gulp": "^4.0.2",
		"gulp-terser": "^2.1.0",
		"openzeppelin-solidity": "^4.4.0"
	}
}
